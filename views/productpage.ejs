<!DOCTYPE html>
<html>
 <% include header.ejs %>
  <body>
    <br>
  	<div id="contentWrapper" class="container">
    <div class="row">
      <% if(results && results.total) { %>
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading clearfix">
              <h1 class="panel-title"><span style="text-transform:uppercase"><strong><%= results.products[0].name %></strong><br><%= results.products[0].modelNumber %></span></h1>
            </div>
    			<br />
    			<table style='text-align:center;' class="table">
    		    <tbody>
    					<% for(var i = 0; i < results.total; i++) { %>
    						<% var result = results.products[i]; %>
    						<tr id='carrierrate' class=''>
                  <td><img src='<%= result.largeImage %>'><br></td>
    							<td>
                    <table class ="table table-hover">
                      <% for(var i = 0; i < results.products[0].details.length; i++) { %>
                        <% var result = results.products[0].details[i]; %>
                        <tr><td><%= result.name %></td><td><%= result.value %></td></tr>
                      <% } %>
                    </table>
                  </td>
    						</tr>
              </tbody>
            </table>
            <ul>
            <% for(var i = 0; i < results.products[0].features.length; i++) { %>
  					  <% var result = results.products[0].features[i]; %>
              <li><%= result.feature %></li>


    					<% } %></ul><% } %>


    		<% } else { %>
    			<br />
    			No results returned!
    		<% } %>
    	  </div>
    	</div>
      </div>
    </div>
  </body>
</html>
